pipeline {
    agent any

    stages {
         stage('Checkout') {
            steps {
                git branch: 'deploy',url: 'https://github.com/espinoza6006/myInsuranceApp.git'
            }
        }  
        stage('Exexuting kubectl') {
            steps {
                echo 'Exexuting kubectl'
                withKubeConfig([credentialsId: 'k8-credentials']) {
                    sh 'kubectl apply -f kubernetes/1_insurance_app_test_deployment.yaml'
                    sh 'kubectl apply -f kubernetes/2_insurance_app_service.yaml'
                }
            }
        }
    }
}